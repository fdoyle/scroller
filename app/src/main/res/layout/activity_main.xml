<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lacronicus.scrollview2.MainActivity">
    <com.lacronicus.scrollview2.ScrollerView
        android:id="@+id/scroller"
        android:layout_margin="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFD" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/xy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:text="y=x" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/sin"
        android:text="y=sin(x)"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/xy"
        android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/xy"
        android:layout_marginTop="0dp"/>
    <Button
        android:id="@+id/inversion"
        android:text="zero"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/sin"
        android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/sin"
        android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/hand"
        android:text="hand"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/inversion"
        android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/sin"
        android:layout_marginTop="0dp"/>


</android.support.constraint.ConstraintLayout>
